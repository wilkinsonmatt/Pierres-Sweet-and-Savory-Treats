@{
  Layout = "_Layout";
}

<h2>Welcome to Pierre's Sweet and Savory Treats!</h2>
<hr />
<br>

@if (User.Identity.IsAuthenticated)
{
  <h5>@Html.ActionLink("Add a treat", "Create", "Treats")</h5>
  <h5>@Html.ActionLink("Add a flavor", "Create", "Flavors")</h5>
  <br>
  <hr />
  <p>Logged in as @User.Identity.Name</p>

  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-default" value="Log out" />
  }
}
else
{
  <h5>@Html.ActionLink("Log in", "Login", "Account")</h5>
  <h5>@Html.ActionLink("Create account", "Register", "Account")</h5>
}
