@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h2>@Html.DisplayFor(model => model.Title)</h2>
<hr />
<br>

@if(@Model.JoinEntities.Count == 0)
{
  <h5>Ingredients: @Html.DisplayFor(model => model.Ingredients)</h5>
  <h5>Instructions: @Html.DisplayFor(model => model.Instructions)</h5>
  <h5>Rating: @Html.DisplayFor(model => model.Rating)</h5>
  <hr />
  <h4>Flavors:</h4>
  <p>This treat does not belong to any flavors</p>
}
else
{
  <h3>Ingredients:</h3>
  <h5>@Html.DisplayFor(model => model.Ingredients)</h5>
  <br>
  <h3>Instructions:</h3>
  <h5>@Html.DisplayFor(model => model.Instructions)</h5>
  <br>
  <h3>Rating: @Html.DisplayFor(model => model.Rating)</h3>
  <br>
  <hr />
  <h3>Flavors:</h3>
  <dl>
  @foreach(var join in Model.JoinEntities)
  {
    <dt>@join.Flavor.Name 
    @using (Html.BeginForm("DeleteFlavor", "Treats"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId) 
      <input type="submit" value="Delete" class="btn"/>
    }
    </dt>
  }
  </dl>
}
<hr />
<br>
<h5>@Html.ActionLink("Add flavor", "AddFlavor", new { id = Model.TreatId })</h5>
<h5>@Html.ActionLink("Edit treat", "Edit", new { id = Model.TreatId })</h5>
<h5>@Html.ActionLink("Delete treat", "Delete", new { id = Model.TreatId })</h5>
<h5>@Html.ActionLink("Back to treats", "Index")</h5>